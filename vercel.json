{
  "version": 2,
  "builds": [
    {
      "src": "./public/**/*",
      "use": "@vercel/static"
    },
    {
     "src": "src/index.ts",
     "use": "@vercel/node",
     "config": { "includeFiles": ["public/**"] }
    }
  ],
  "routes": [
    {
     "src": "/(.*)",
     "dest": "src/index.ts"
    }
  ],
  "outputDirectory": "public"
}